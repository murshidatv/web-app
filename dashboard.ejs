<% include('../layouts/header.ejs') %>


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Form</title>
  <link rel="stylesheet" href="/user/css/dashboard.css">
</head>
 
<body>
 <div class="container"> 

<h1>Dashboard</h1>

<br>
<br>

<table  class="table" width="75%"  style="border:1px solid rgb(72, 68, 68) ">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
      
        <th>Actions</th>
      
    </tr>
    

<%
if(users.length > 0){
    for(let i=0; i< users.length; i++)
    {
        %>
        <tr>
            <td class="table-secondary"><%= users[i].name %></td>
            <td><%= users[i].email %></td>
            
            <td><%= users[i].mobile %></td>
            <td>

               
                <button class="btn "><a href="/admin/edit-user?id=<%= users[i]._id %>">Edit</a></button><br>

                <button class="btn "><a href="/admin/delete-user?id=<%= users[i]._id %>">Delete</a></button>
                <br>
            </td>
            <!--<td><img src="/userImages" alt="<%= users[i].image %>" width="100px" height="100px"></td>-->
        </tr>
        <%
    }

}else{%>

    <tr>
        
        <td colspan="5">Users Not Found</td>
        
    </tr>


    <% } %>

</table>
<br>
<a href="/admin/new-user">Add New User</a><br><br>
<a href="/admin/home">Go Home</a>
</div>


  </body>
